<script src="/js/control.js"></script>

<div id="controlSpots"></div>
<!-- <img src="/image/A/1A.gif" class="fullscreen swap" id="1" set="1"/> -->


  <%
var id=1;
var videoList = app.locals.videoA.length;

for (var i = videoList -1 ; i >= 0; i--) {     
  %>
    	<video class="hidden" id="<%= id %>" autoplay muted="true"/>
      	<source src="/video/webm/A/<%= id %>A.webm" type='video/webm; codecs="vp8, vorbis"'/>
      	Your browser does not support the video tag.
    	</video>	
    <%
  id++
   };
  %>

</div>

<script>

$.getJSON('/tmp/1.json', function(data) {
    for (var i in data.spots) {
			var skeleton = $('<a class="send-video">&nbsp;</a>');
        	$(skeleton).attr('nextvid', data.spots[i].link);
        	$(skeleton).css('top', data.spots[i].top); // needs to get current height of #controlSpots
        	$(skeleton).css('left', data.spots[i].left);
        	$(skeleton).css('width',  (data.spots[i].width/720)*100+'%' ); //video-width should be adjustable
        	$(skeleton).css('height', (data.spots[i].height/540)*100+'%'); //video-height should be adjustable
        	$("#controlSpots").html(skeleton);
    }
  });

</script>
